{
  "name": "dragon-sanctuary",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev | pino-pretty",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "export BASE_URL='http://localhost:3000/' && npx playwright test",
    "prepare": "husky",
    "postinstall": "prisma generate && prisma migrate deploy",
    "migrate": "prisma migrate dev",
    "type-check": "tsc --noEmit",
    "check-all": "npm run type-check && npm run lint && npm run test && npm run test:e2e"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.658.1",
    "@prisma/client": "^5.20.0",
    "@vercel/postgres": "^0.10.0",
    "clsx": "^2.1.1",
    "framer-motion": "^11.9.0",
    "motion": "^10.18.0",
    "next": "14.2.13",
    "openai": "^4.65.0",
    "pino": "^9.4.0",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.53.0",
    "react-intersection-observer": "^9.13.1",
    "sharp": "^0.33.5",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.2",
    "@snaplet/copycat": "^5.0.0",
    "@snaplet/seed": "^0.98.0",
